{
  "name": "crypto-arb-bot",
  "version": "1.0.0",
  "description": "A TypeScript-based cryptocurrency arbitrage trading bot using CCXT",
  "main": "dist/main.js",
  "scripts": {
    "build": "tsc",
    "start": "TS_NODE_PROJECT=tsconfig.runtime.json node -r tsconfig-paths/register dist/main.js",
    "dev": "ts-node src/main.ts",
    "dev:watch": "nodemon --exec ts-node src/main.ts",
    "clean": "rm -rf dist",
    "prebuild": "npm run clean",
    "test": "jest",
    "lint": "ESLINT_USE_FLAT_CONFIG=false eslint src --ext .ts",
    "lint:fix": "ESLINT_USE_FLAT_CONFIG=false eslint src --ext .ts --fix"
  },
  "dependencies": {
    "ccxt": "^4.5.1",
    "dotenv": "^17.2.1",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^24.3.0",
    "@typescript-eslint/eslint-plugin": "^8.40.0",
    "@typescript-eslint/parser": "^8.40.0",
    "eslint": "^9.33.0",
    "jest": "^30.0.5",
    "nodemon": "^3.1.10",
    "ts-jest": "^29.4.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.9.2"
  },
  "keywords": [
    "cryptocurrency",
    "arbitrage",
    "trading",
    "bot",
    "ccxt",
    "typescript"
  ],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "private": true
}
