# =============================================================================
# CRYPTO ARBITRAGE BOT - Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your actual values
# NEVER commit your .env file to version control!

# =============================================================================
# GENERAL SETTINGS
# =============================================================================

# Test mode - set to false for live trading (DANGEROUS!)
TEST_MODE=true

# Logging level (error, warn, info, debug)
LOG_LEVEL=info

# Maximum number of concurrent trades
MAX_CONCURRENT_TRADES=3

# Order book depth to fetch
ORDER_BOOK_DEPTH=10

# Update interval in milliseconds
UPDATE_INTERVAL=1000

# =============================================================================
# EXCHANGE CONFIGURATION
# =============================================================================

# Enabled exchanges (comma-separated)
# Supported: binance, kucoin, okx, bybit, kraken
ENABLED_EXCHANGES=binance,kucoin

# Trading symbols (comma-separated)
TRADING_SYMBOLS=XRP/USDT,BTC/USDT,ETH/USDT

# =============================================================================
# BINANCE API CREDENTIALS
# =============================================================================
# Get from: https://www.binance.com/en/my/settings/api-management
# For testnet: https://testnet.binance.vision/

BINANCE_API_KEY=your_binance_api_key_here
BINANCE_SECRET=your_binance_secret_here

# Optional: Custom rate limit (requests per minute)
# BINANCE_RATE_LIMIT=1200

# Optional: Custom timeout (milliseconds)
# BINANCE_TIMEOUT=10000

# =============================================================================
# KUCOIN API CREDENTIALS
# =============================================================================
# Get from: https://www.kucoin.com/account/api
# For sandbox: https://sandbox.kucoin.com/

KUCOIN_API_KEY=your_kucoin_api_key_here
KUCOIN_SECRET=your_kucoin_secret_here
KUCOIN_PASSWORD=your_kucoin_passphrase_here

# Optional: Custom rate limit (requests per minute)
# KUCOIN_RATE_LIMIT=1800

# Optional: Custom timeout (milliseconds)
# KUCOIN_TIMEOUT=10000

# =============================================================================
# OKX API CREDENTIALS
# =============================================================================
# Get from: https://www.okx.com/account/my-api
# For demo trading: Use demo account

# OKX_API_KEY=your_okx_api_key_here
# OKX_SECRET=your_okx_secret_here
# OKX_PASSWORD=your_okx_passphrase_here

# =============================================================================
# BYBIT API CREDENTIALS
# =============================================================================
# Get from: https://www.bybit.com/app/user/api-management
# For testnet: https://testnet.bybit.com/

# BYBIT_API_KEY=your_bybit_api_key_here
# BYBIT_SECRET=your_bybit_secret_here

# =============================================================================
# KRAKEN API CREDENTIALS
# =============================================================================
# Get from: https://www.kraken.com/u/security/api

# KRAKEN_API_KEY=your_kraken_api_key_here
# KRAKEN_SECRET=your_kraken_secret_here

# =============================================================================
# STRATEGY CONFIGURATION
# =============================================================================

# Enabled strategies (comma-separated)
ENABLED_STRATEGIES=simple-arbitrage

# Simple Arbitrage Strategy Settings
SIMPLE_ARBITRAGE_MIN_PROFIT=0.5
SIMPLE_ARBITRAGE_MAX_TRADE_AMOUNT=100
SIMPLE_ARBITRAGE_CHECK_INTERVAL=5000
SIMPLE_ARBITRAGE_MAX_SLIPPAGE=0.1

# =============================================================================
# RISK MANAGEMENT
# =============================================================================

# Maximum position size per trade (in USD equivalent)
MAX_POSITION_SIZE=1000

# Balance reserve percentage (keep this much balance unused)
BALANCE_RESERVE_PERCENT=10

# Maximum allowed slippage percentage
MAX_SLIPPAGE_PERCENT=0.1

# Order timeout in milliseconds
ORDER_TIMEOUT=30000

# Price validation window in milliseconds
PRICE_VALIDATION_WINDOW=2000

# Maximum opportunity age in milliseconds
MAX_OPPORTUNITY_AGE=5000

# =============================================================================
# ADVANCED SETTINGS
# =============================================================================

# Enable rate limiting
ENABLE_RATE_LIMIT=true

# Enable WebSocket connections (requires CCXT Pro)
ENABLE_WEBSOCKETS=true

# Enable balance monitoring
ENABLE_BALANCE_MONITORING=true

# Enable performance metrics
ENABLE_PERFORMANCE_METRICS=true

# =============================================================================
# NOTIFICATIONS (Optional)
# =============================================================================

# Discord webhook for notifications
# DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/your_webhook_here

# Slack webhook for notifications
# SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your_webhook_here

# Email notifications
# EMAIL_SMTP_HOST=smtp.gmail.com
# EMAIL_SMTP_PORT=587
# EMAIL_USER=your_email@gmail.com
# EMAIL_PASSWORD=your_app_password
# EMAIL_TO=notifications@yourdomain.com

# =============================================================================
# DATABASE (Optional)
# =============================================================================

# SQLite database file for storing trade history
# DATABASE_URL=sqlite:./trades.db

# PostgreSQL database (alternative to SQLite)
# DATABASE_URL=postgresql://user:password@localhost:5432/arbitrage_bot

# =============================================================================
# MONITORING (Optional)
# =============================================================================

# Prometheus metrics endpoint port
# METRICS_PORT=3000

# Health check endpoint port
# HEALTH_CHECK_PORT=3001

# =============================================================================
# SAFETY WARNINGS
# =============================================================================
# 
# ⚠️  IMPORTANT SAFETY NOTES:
# 
# 1. Always start with TEST_MODE=true
# 2. Use testnet/sandbox APIs first
# 3. Start with small amounts
# 4. Monitor your bot closely
# 5. Understand the risks of automated trading
# 6. Check exchange trading fees and limits
# 7. Ensure you have sufficient balance buffers
# 8. Keep your API keys secure
# 9. Never share your .env file
# 10. Consider the tax implications of automated trading
#
# This bot is for educational purposes. Use at your own risk.
# =============================================================================